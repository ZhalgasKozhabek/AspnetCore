
@{
    ViewData["AdminTitle"] = "WorkExperiences";
    Layout = "_LayoutAdmin";
}
@model Digital.Models.WorkExperience
<div class="wrapper" style="margin-top: 20px; ">

    <div class="row">
        <div style="padding: 30px;">
            <form asp-controller="Home" asp-action="UpdateWorkExperience">

                <div class="form-group ">
                    <label class="control-label requiredField" for="name">
                        Company name

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="Company" type="text" value="@Model.Company" />
                    </div>
                    <label class="control-label requiredField" for="name">
                        Title

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="Title" type="text" value="@Model.Title"/>
                    </div>
                    <label class="control-label requiredField" for="name">
                        Country

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="Country" type="text" value="@Model.Country" />
                    </div>
                    <label class="control-label requiredField" for="name">
                        From Year

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="FromYear" type="text" value="@Model.FromYear" />
                    </div>
                    <label class="control-label requiredField" for="name">
                        To Year

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="ToYear" type="text" value="@Model.ToYear" />
                    </div>
                    <label class="control-label requiredField" for="name">
                        Description

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="Description" type="text" value="@Model.Description" />
                    </div>

                </div>
                <div class="form-group">
                    <div>
                        <input type="hidden" name="ExperienceID" value="@Model.ExperienceID" />
                        <button class="btn btn-primary " name="submit" type="submit">
                            Submit
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>