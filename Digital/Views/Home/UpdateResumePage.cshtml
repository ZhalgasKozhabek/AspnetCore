
@{
    ViewData["AdminTitle"] = "Resumes";
    Layout = "_LayoutAdmin";
}
@model Digital.Models.Resume
<div class="wrapper" style="margin-top: 20px; ">

    <div class="row">
        <div style="padding: 30px;">
            <form asp-controller="Home" asp-action="UpdateResume">

                <div class="form-group ">
                    <label class="control-label requiredField" for="name">
                        Address

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="Address" type="text" value="@Model.Address" />

                    </div>
                    <label class="control-label requiredField" for="name">
                        Telephone number

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="Tel" type="text" value="@Model.Tel" />
                    </div>
                    <label class="control-label requiredField" for="name">
                        Email

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="Email" type="text" value="@Model.Email" />
                    </div>
                    <label class="control-label requiredField" for="name">
                        Social network URL

                    </label>
                    <div class="input-group">

                        <input class="form-control" id="name" name="Profile" type="text" value="@Model.Profile" />
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <button class="btn btn-primary " name="submit" type="submit">
                            Submit
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>